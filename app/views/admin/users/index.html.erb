<div class="hero-unit">
  <div class="container">
    <div class="row">
      <div class="twelve columns">
        <%= link_to root_path do %>
        &larr; Home
        <% end %>
        <h3>Admin &mdash; Users</h3>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="three columns">
      <%= render "admin/sub_nav" %>
    </div>
    <div class="nine columns">
      <%= link_to "Write Post", new_admin_post_path,
        class:"nice small blue button", style:"margin-bottom:5px;" %>
      <table style="width:100%">
        <thead>
          <tr>
            <th>Name</th>
            <th>Admin?</th>
            <th>Last Login</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.admin? %></td>
            <td><%= user.last_login_at.try(:strftime, "%A, %B %d, %Y at %I:%M%P") %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>